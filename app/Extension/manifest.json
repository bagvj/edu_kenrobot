{
	"name": "Kenrobot平台扩展",
	"description": "Kenrobot平台扩展",
	"version": "0.1.9",
	"app": {
		"background": {
			"scripts": ["js/background.js"]
		}
	},
	"icons": {
		"16": "images/logo.png",
		"128": "images/logo.png"
	},
	"permissions": [
		"serial",
		"fileSystem",
		"*://*.kenrobot.com/"
	],
	"url_handlers": {
		"debug": {
			"matches": [
				"http://platform.kenrobot.com/extension/debug/*"
			],
			"title": "串口调试"
		},
		"burn": {
			"matches": [
				"http://platform.kenrobot.com/extension/burn/*"
			],
			"title": "烧写"
		}
	},
	"externally_connectable": {
  		"matches": ["*://*.kenrobot.com/*"]
	},
	"update_url": "http://platform.kenrobot.com/extension-update.xml"
}